{
  "name": "d3-horizon",
  "version": "1.12.1",
  "description": "An horizon area chart component",
  "license": "MIT",
  "type": "module",
  "unpkg": "dist/d3-horizon.min.js",
  "jsdelivr": "dist/d3-horizon.min.js",
  "main": "dist/d3-horizon.mjs",
  "module": "dist/d3-horizon.mjs",
  "exports": {
    "umd": "./dist/d3-horizon.min.js",
    "default": "./dist/d3-horizon.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/d3-horizon.git"
  },
  "homepage": "https://github.com/vasturiano/d3-horizon",
  "keywords": [
    "d3",
    "horizon",
    "area",
    "chart"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "https://github.com/vasturiano"
  },
  "bugs": {
    "url": "https://github.com/vasturiano/d3-horizon/issues"
  },
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "rollup -w -c",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
